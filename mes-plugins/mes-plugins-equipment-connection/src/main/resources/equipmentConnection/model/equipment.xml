<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://schema.qcadoo.org/model" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">

    <fields>
        <number name="number" type="string" required="true" unique="true">
            <message>
                <key>equipmentConnection.equipment.number.error.empty</key>
                <message>Number cannot be empty</message>
            </message>
        </number>

        <field name="name" type="string" required="true">
            <message>
                <key>equipmentConnection.equipment.name.error.empty</key>
                <message>Name cannot be empty</message>
            </message>
        </field>

        <field name="type" type="string" required="true"/>

        <field name="model" type="string"/>

        <field name="manufacturer" type="string"/>

        <field name="serialNumber" type="string"/>

        <field name="installationDate" type="date"/>

        <field name="workstation" type="manyToOne" model="workstation" plugin="basic"/>

        <field name="description" type="text"/>

        <field name="status" type="string" required="true" default="IDLE">
            <validation>
                <rule type="inSet">
                    <parameter name="set">IDLE,PRODUCING,DOWN,MAINTENANCE</parameter>
                </rule>
            </validation>
        </field>

        <field name="ipAddress" type="string"/>

        <field name="port" type="integer"/>

        <field name="protocol" type="string">
            <validation>
                <rule type="inSet">
                    <parameter name="set">MQTT,OPCUA,REST,Modbus</parameter>
                </rule>
            </validation>
        </field>

        <field name="enabled" type="boolean" default="false"/>

    </fields>

    <views>
        <view name="tree">
            <field name="number"/>
            <field name="name"/>
            <field name="type"/>
            <field name="status"/>
        </view>

        <view name="form">
            <field name="number"/>
            <field name="name"/>
            <field name="type"/>
            <field name="model"/>
            <field name="manufacturer"/>
            <field name="serialNumber"/>
            <field name="installationDate"/>
            <field name="workstation"/>
            <field name="ipAddress"/>
            <field name="port"/>
            <field name="protocol"/>
            <field name="enabled"/>
            <field name="status"/>
            <field name="description"/>
        </view>

    </views>

</model>