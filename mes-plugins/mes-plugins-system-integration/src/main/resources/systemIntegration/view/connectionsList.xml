<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://schema.qcadoo.org/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd">

    <grid name="connectionsList">
        <fields>
            <field name="name" />
            <field name="description" />
            <field name="connectionType" />
            <field name="status" />
            <field name="lastTestDate" />
            <field name="endpointUrl" />
        </fields>
        <actions>
            <action name="view" type="view" />
            <action name="edit" type="edit" />
            <action name="delete" type="delete" />
            <action name="testConnection" type="button" />
        </actions>
    </grid>

</view>
