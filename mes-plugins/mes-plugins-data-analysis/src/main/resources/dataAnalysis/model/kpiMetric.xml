<?xml version="1.0" encoding="UTF-8"?>
<model xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://schema.qcadoo.org/model.xsd">

    <entity name="kpiMetric" package="dataAnalysis">
        <field name="id" type="id"/>
        <field name="code" type="string" length="100" required="true"/>
        <field name="name" type="string" length="255" required="true"/>
        <field name="description" type="string" length="1000"/>
        <field name="category" type="string" length="50" required="true">
            <constraints>
                <not-empty/>
                <in-list>
                    <value>PRODUCTION</value>
                    <value>QUALITY</value>
                    <value>SUPPLY_CHAIN</value>
                    <value>FINANCIAL</value>
                    <value>OEE</value>
                    <value>CUSTOM</value>
                </in-list>
            </constraints>
        </field>
        <field name="calculationMethod" type="string" length="255" required="true"/>
        <field name="targetValue" type="decimal" scale="2"/>
        <field name="warningThreshold" type="decimal" scale="2"/>
        <field name="criticalThreshold" type="decimal" scale="2"/>
        <field name="unit" type="string" length="50"/>
        <field name="frequency" type="string" length="50" required="true" defaultValue="DAILY">
            <constraints>
                <not-empty/>
                <in-list>
                    <value>HOURLY</value>
                    <value>DAILY</value>
                    <value>WEEKLY</value>
                    <value>MONTHLY</value>
                    <value>QUARTERLY</value>
                    <value>YEARLY</value>
                </in-list>
            </constraints>
        </field>
        <field name="dataSource" type="string" length="255" required="true"/>
        <field name="status" type="string" length="50" required="true" defaultValue="ACTIVE">
            <constraints>
                <not-empty/>
                <in-list>
                    <value>ACTIVE</value>
                    <value>INACTIVE</value>
                    <value>ARCHIVED</value>
                </in-list>
            </constraints>
        </field>
        <field name="created" type="dateTime"/>
        <field name="updated" type="dateTime"/>
        <field name="version" type="version"/>
        
        <views>
            <view name="form">
                <field name="code"/>
                <field name="name"/>
                <field name="description"/>
                <field name="category"/>
                <field name="calculationMethod"/>
                <field name="targetValue"/>
                <field name="warningThreshold"/>
                <field name="criticalThreshold"/>
                <field name="unit"/>
                <field name="frequency"/>
                <field name="dataSource"/>
                <field name="status"/>
            </view>
        </views>
    </entity>

</model>