<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://schema.qcadoo.org/model" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">

    <fields>
        <field name="equipment" type="manyToOne" model="equipment" required="true"/>

        <field name="connectionTime" type="dateTime" required="true" default="now"/>

        <field name="disconnectionTime" type="dateTime"/>

        <field name="status" type="string" required="true" default="CONNECTING">
            <validation>
                <rule type="inSet">
                    <parameter name="set">CONNECTING,CONNECTED,DISCONNECTING,DISCONNECTED,ERROR</parameter>
                </rule>
            </validation>
        </field>

        <field name="message" type="text"/>

        <field name="responseTime" type="integer"/>

        <field name="dataReceived" type="integer"/>

        <field name="dataSent" type="integer"/>

    </fields>

    <views>
        <view name="tree">
            <field name="equipment"/>
            <field name="connectionTime"/>
            <field name="status"/>
            <field name="responseTime"/>
        </view>

        <view name="form">
            <field name="equipment"/>
            <field name="connectionTime"/>
            <field name="disconnectionTime"/>
            <field name="status"/>
            <field name="message"/>
            <field name="responseTime"/>
            <field name="dataReceived"/>
            <field name="dataSent"/>
        </view>

    </views>

</model>