<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://schema.qcadoo.org/model" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">

    <fields>
        <number name="number" type="string" required="true" unique="true">
            <message>
                <key>qualityManagement.qualityControl.number.error.empty</key>
                <message>Number cannot be empty</message>
            </message>
        </number>

        <field name="name" type="string" required="true">
            <message>
                <key>qualityManagement.qualityControl.name.error.empty</key>
                <message>Name cannot be empty</message>
            </message>
        </field>

        <field name="productionOrder" type="manyToOne" model="order" plugin="orders" required="true"/>

        <field name="product" type="manyToOne" model="product" plugin="basic" required="true"/>

        <field name="batchNumber" type="string"/>

        <field name="productionDate" type="date" required="true"/>

        <field name="shift" type="manyToOne" model="shift" plugin="basic"/>

        <field name="operator" type="manyToOne" model="staff" plugin="basic"/>

        <field name="status" type="string" required="true" default="PENDING">
            <validation>
                <rule type="inSet">
                    <parameter name="set">PENDING,IN_PROGRESS,COMPLETED,FAILED</parameter>
                </rule>
            </validation>
        </field>

        <field name="sampleSize" type="integer" required="true"/>

        <field name="inspectedCount" type="integer" default="0"/>

        <field name="passCount" type="integer" default="0"/>

        <field name="failCount" type="integer" default="0"/>

        <field name="passRate" type="decimal">
            <validation>
                <rule type="range">
                    <parameter name="min">0.0</parameter>
                    <parameter name="max">100.0</parameter>
                </rule>
            </validation>
        </field>

        <field name="comments" type="text"/>

        <field name="completedDate" type="dateTime"/>

        <field name="completedBy" type="manyToOne" model="staff" plugin="basic"/>

    </fields>

    <views>
        <view name="tree">
            <field name="number"/>
            <field name="name"/>
            <field name="productionOrder"/>
            <field name="product"/>
            <field name="status"/>
            <field name="passRate"/>
        </view>

        <view name="form">
            <field name="number"/>
            <field name="name"/>
            <field name="productionOrder"/>
            <field name="product"/>
            <field name="batchNumber"/>
            <field name="productionDate"/>
            <field name="shift"/>
            <field name="operator"/>
            <field name="status"/>
            <field name="sampleSize"/>
            <field name="inspectedCount"/>
            <field name="passCount"/>
            <field name="failCount"/>
            <field name="passRate"/>
            <field name="comments"/>
            <field name="completedDate"/>
            <field name="completedBy"/>
        </view>

    </views>

</model>