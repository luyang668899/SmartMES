<?xml version="1.0" encoding="UTF-8"?>
<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://schema.qcadoo.org/view.xsd">

    <page name="supplierRatingList" extensionOf="list">
        <table name="supplierRatings" entity="supplierRating">
            <columns>
                <column name="supplier" sortable="true" filter="true"/>
                <column name="ratingDate" sortable="true" filter="true"/>
                <column name="qualityRating" sortable="true" filter="true"/>
                <column name="deliveryRating" sortable="true" filter="true"/>
                <column name="priceRating" sortable="true" filter="true"/>
                <column name="serviceRating" sortable="true" filter="true"/>
                <column name="overallRating" sortable="true" filter="true"/>
                <column name="ratingPeriod" sortable="true" filter="true"/>
                <column name="reviewer" sortable="true" filter="true"/>
                <column name="status" sortable="true" filter="true"/>
            </columns>
            <toolbar>
                <button name="add" action="navigateTo" params="{view: 'supplierRatingDetails', mode: 'new'}"/>
                <button name="edit" action="navigateTo" params="{view: 'supplierRatingDetails', mode: 'edit'}" condition="singleSelected"/>
                <button name="delete" action="delete" condition="singleSelected"/>
                <button name="refresh" action="refresh"/>
            </toolbar>
        </table>
    </page>

</view>