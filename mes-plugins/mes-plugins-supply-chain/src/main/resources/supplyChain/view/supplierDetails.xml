<?xml version="1.0" encoding="UTF-8"?>
<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://schema.qcadoo.org/view.xsd">

    <page name="supplierDetails" extensionOf="form">
        <form name="supplierForm" entity="supplier">
            <fields>
                <field name="number" required="true"/>
                <field name="name" required="true"/>
                <field name="contactPerson" required="true"/>
                <field name="email" required="true"/>
                <field name="phone" required="true"/>
                <field name="fax"/>
                <field name="website"/>
                <field name="address" required="true"/>
                <field name="status" required="true"/>
                <field name="supplierType" required="true"/>
                <field name="paymentTerms"/>
                <field name="leadTime"/>
                <field name="qualityRating"/>
                <field name="deliveryRating"/>
                <field name="priceRating"/>
                <field name="serviceRating"/>
                <field name="overallRating"/>
                <field name="notes" type="textarea"/>
            </fields>
            <toolbar>
                <button name="save" action="save"/>
                <button name="cancel" action="navigateTo" params="{view: 'supplierList'}"/>
                <button name="delete" action="delete" condition="idSet"/>
            </toolbar>
        </form>
    </page>

</view>