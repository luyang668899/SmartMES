<?xml version="1.0" encoding="UTF-8"?>
<model xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://schema.qcadoo.org/model.xsd">

    <entity name="dashboard" package="dataAnalysis">
        <field name="id" type="id"/>
        <field name="name" type="string" length="255" required="true"/>
        <field name="description" type="string" length="1000"/>
        <field name="type" type="string" length="50" required="true">
            <constraints>
                <not-empty/>
                <in-list>
                    <value>PRODUCTION</value>
                    <value>QUALITY</value>
                    <value>SUPPLY_CHAIN</value>
                    <value>FINANCIAL</value>
                    <value>CUSTOM</value>
                </in-list>
            </constraints>
        </field>
        <field name="visibility" type="string" length="50" required="true" defaultValue="PRIVATE">
            <constraints>
                <not-empty/>
                <in-list>
                    <value>PUBLIC</value>
                    <value>PRIVATE</value>
                    <value>ROLE_BASED</value>
                </in-list>
            </constraints>
        </field>
        <field name="owner" type="string" length="255"/>
        <field name="configuration" type="string" length="4000"/>
        <field name="status" type="string" length="50" required="true" defaultValue="ACTIVE">
            <constraints>
                <not-empty/>
                <in-list>
                    <value>ACTIVE</value>
                    <value>INACTIVE</value>
                    <value>ARCHIVED</value>
                </in-list>
            </constraints>
        </field>
        <field name="created" type="dateTime"/>
        <field name="updated" type="dateTime"/>
        <field name="version" type="version"/>
        
        <views>
            <view name="form">
                <field name="name"/>
                <field name="description"/>
                <field name="type"/>
                <field name="visibility"/>
                <field name="owner"/>
                <field name="configuration"/>
                <field name="status"/>
            </view>
        </views>
    </entity>

</model>