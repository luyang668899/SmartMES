<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://schema.qcadoo.org/model" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">

    <fields>
        <field name="equipment" type="manyToOne" model="equipment" required="true"/>

        <field name="timestamp" type="dateTime" required="true" default="now"/>

        <field name="availability" type="decimal" required="true">
            <validation>
                <rule type="range">
                    <parameter name="min">0.0</parameter>
                    <parameter name="max">100.0</parameter>
                </rule>
            </validation>
        </field>

        <field name="performance" type="decimal" required="true">
            <validation>
                <rule type="range">
                    <parameter name="min">0.0</parameter>
                    <parameter name="max">100.0</parameter>
                </rule>
            </validation>
        </field>

        <field name="quality" type="decimal" required="true">
            <validation>
                <rule type="range">
                    <parameter name="min">0.0</parameter>
                    <parameter name="max">100.0</parameter>
                </rule>
            </validation>
        </field>

        <field name="oee" type="decimal" required="true">
            <validation>
                <rule type="range">
                    <parameter name="min">0.0</parameter>
                    <parameter name="max">100.0</parameter>
                </rule>
            </validation>
        </field>

        <field name="plannedProductionTime" type="integer" required="true"/>

        <field name="operatingTime" type="integer" required="true"/>

        <field name="idealCycleTime" type="decimal"/>

        <field name="actualCycleTime" type="decimal"/>

        <field name="goodCount" type="integer" default="0"/>

        <field name="totalCount" type="integer" default="0"/>

        <field name="downtimeMinutes" type="integer" default="0"/>

        <field name="downtimeReason" type="string"/>

        <field name="shift" type="manyToOne" model="shift" plugin="basic"/>

        <field name="productionOrder" type="manyToOne" model="order" plugin="orders"/>

    </fields>

    <views>
        <view name="tree">
            <field name="equipment"/>
            <field name="timestamp"/>
            <field name="oee"/>
            <field name="availability"/>
            <field name="performance"/>
            <field name="quality"/>
        </view>

        <view name="form">
            <field name="equipment"/>
            <field name="timestamp"/>
            <field name="oee"/>
            <field name="availability"/>
            <field name="performance"/>
            <field name="quality"/>
            <field name="plannedProductionTime"/>
            <field name="operatingTime"/>
            <field name="idealCycleTime"/>
            <field name="actualCycleTime"/>
            <field name="goodCount"/>
            <field name="totalCount"/>
            <field name="downtimeMinutes"/>
            <field name="downtimeReason"/>
            <field name="shift"/>
            <field name="productionOrder"/>
        </view>

    </views>

</model>