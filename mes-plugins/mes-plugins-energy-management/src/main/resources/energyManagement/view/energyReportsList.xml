<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://schema.qcadoo.org/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd">

    <grid name="energyReportsListGrid">
        <fields>
            <field name="name"/>
            <field name="reportId"/>
            <field name="reportType"/>
            <field name="startDate"/>
            <field name="endDate"/>
            <field name="totalConsumption"/>
            <field name="totalCost"/>
            <field name="currency"/>
            <field name="generationDate"/>
            <field name="generatedBy"/>
            <field name="status"/>
        </fields>
        <actions>
            <action name="view" type="view"/>
            <action name="edit" type="edit"/>
            <action name="delete" type="delete"/>
        </actions>
    </grid>

    <form name="energyReportsListForm">
        <fields>
            <field name="name" type="text"/>
            <field name="reportId" type="text"/>
            <field name="reportType" type="select"/>
            <field name="status" type="select"/>
            <field name="generatedBy" type="text"/>
            <field name="startDate" type="dateRange"/>
        </fields>
        <actions>
            <action name="search" type="search"/>
            <action name="reset" type="reset"/>
            <action name="add" type="add"/>
        </actions>
    </form>

</view>