<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://schema.qcadoo.org/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd">

    <form name="anomalyDetectionDetails">
        <fields>
            <field name="name" />
            <field name="description" />
            <field name="detectionType" />
            <field name="threshold" />
            <field name="sourceSystem" />
            <field name="status" />
            <field name="createdDate" />
            <field name="lastRun" />
            <field name="createdBy" />
            <field name="parameters" />
            <field name="isActive" />
        </fields>
        <actions>
            <action name="save" type="save" />
            <action name="cancel" type="cancel" />
            <action name="delete" type="delete" />
            <action name="run" type="button" />
        </actions>
    </form>

</view>
