<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://www.qcadoo.com/model" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.qcadoo.com/model view.xsd">
    <page>
        <title>Maintenance Schedule Details</title>
        <form name="maintenanceScheduleForm" entity="predictiveMaintenance.maintenanceSchedule">
            <fields>
                <field name="equipmentHealth" type="manyToOne" required="true"/>
                <field name="scheduleType" type="string" required="true"/>
                <field name="scheduledDate" type="dateTime" required="true"/>
                <field name="estimatedDuration" type="integer" required="true"/>
                <field name="status" type="string" required="true"/>
                <field name="priority" type="integer" required="true"/>
                <field name="description" type="text"/>
                <field name="assignedTo" type="manyToOne"/>
                <field name="estimatedCost" type="decimal" required="true"/>
                <field name="actualCost" type="decimal"/>
                <field name="actualDuration" type="integer"/>
                <field name="completionDate" type="dateTime"/>
                <field name="notes" type="text"/>
            </fields>
            <tabs>
                <tab name="tasks" title="Tasks">
                    <grid name="tasksGrid" entity="predictiveMaintenance.maintenanceTask" filter="maintenanceSchedule.id = {id}">
                        <columns>
                            <column name="name" type="string" width="200"/>
                            <column name="status" type="string" width="100"/>
                            <column name="estimatedTime" type="integer" width="100"/>
                            <column name="actualTime" type="integer" width="100"/>
                            <column name="assignedTo" type="manyToOne" width="150"/>
                        </columns>
                        <actions>
                            <action name="view" type="navigate" url="/page/predictiveMaintenance/maintenanceTaskDetails.html?recordId={id}"/>
                            <action name="add" type="navigate" url="/page/predictiveMaintenance/maintenanceTaskDetails.html?maintenanceScheduleId={id}"/>
                            <action name="delete" type="delete"/>
                        </actions>
                        <sorts>
                            <sort name="status" direction="asc"/>
                            <sort name="name" direction="asc"/>
                        </sorts>
                    </grid>
                </tab>
            </tabs>
            <actions>
                <action name="save" type="save"/>
                <action name="cancel" type="navigate" url="/page/predictiveMaintenance/maintenanceScheduleList.html"/>
            </actions>
        </form>
    </page>
</view>