<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://schema.qcadoo.org/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd">

    <form name="mappingDetails">
        <fields>
            <field name="name" />
            <field name="description" />
            <field name="connection" />
            <field name="sourceEntity" />
            <field name="targetEntity" />
            <field name="mappingType" />
            <field name="fieldMappings" />
            <field name="transformationRules" />
            <field name="enabled" />
        </fields>
        <actions>
            <action name="save" type="save" />
            <action name="cancel" type="cancel" />
            <action name="delete" type="delete" />
        </actions>
    </form>

</view>
